                <!-- Informaci√≥n Usuario -->
                <div class="info-box">
                    <h2>Informaci√≥n Usuario</h2>
                    <div class="form-grid">
                        <!-- <label for="userType">Usuario_Rol:</label>
                        <select id="userType">
                            <option>Usuario ToolWeb</option>
                        </select>-->

                        <label for="employee">Nombre:</label>
                        <input type="text" id="employee" value="GABRIEL JULIAN">

                        <label for="employee">Apellido:</label>
                        <input type="text" id="employee" value="GUTIERREZ GUERRERO">

                        <label for="userSubType">Direccion:</label>
