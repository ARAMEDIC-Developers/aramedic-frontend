<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfil del Paciente</title>
    <link rel="stylesheet" href="/Perfil_style.css">
</head>
<body>
    <!-- Incluye la barra de tareas -->
    <%- include('../_partials/header') %>

    <div class="dashboard-container">
        <!-- Incluye el sidebar -->
        <%- include('../_partials/sidebar') %>

        <!-- Contenido Principal -->
        <main id="main-content">
            <!-- Incluye el sub-header si lo tienes -->
            <%- include('../_partials/sub_header') %>

            <!-- Aqu√≠ puedes incluir las notificaciones y otros modales si es necesario -->
            <%- include('../_partials/notificaciones') %>
            <%- include('../_partials/modal') %>

            <!-- Perfil del Paciente -->
            <section id="perfil">
                <h1>Informaci√≥n B√°sica del Usuario</h1>
                <div class="content-box">
                    <!-- Secci√≥n de Imagen de Usuario -->
                    <div class="user-image-box">
                        <div class="user-image-square" id="imageContainer">
                            <img id="userImage" src="/placeholder.jpg" alt="Imagen Usuario">
                        </div>
                        <div class="image-buttons">
                            <input type="file" id="imageInput" accept="image/*" hidden>
                            <button id="addImageButton">Agregar Imagen</button>
                            <button id="removeImageButton">Eliminar Imagen</button>
                        </div>
                    </div>

                    <!-- Secci√≥n de Informaci√≥n Usuario -->
                    <div class="info-wrapper">
                        <div class="info-box">
                            <h2>Informaci√≥n Usuario</h2>
                            <form id="formPerfil" action="/dashboard_paciente/perfil/editar" method="POST">
                                <div class="form-grid">
                                    <label for="nombre">Nombre:</label>
                                    <input type="text" id="nombre" name="nombre" value="<%= paciente.nombre %>" required>

                                    <label for="apellido">Apellido:</label>
                                    <input type="text" id="apellido" name="apellido" value="<%= paciente.apellido %>" required>

                                    <label for="direccion">Direcci√≥n:</label>
                                    <input type="text" id="direccion" name="direccion" value="<%= paciente.direccion %>">

                                    <label for="telefono">Tel√©fono:</label>
                                    <input type="text" id="telefono" name="telefono" value="<%= paciente.telefono %>">
                                </div>

                                <h2>Credenciales Globales</h2>
                                <div class="form-grid">
                                    <label for="email">Correo Electr√≥nico:</label>
                                    <input type="email" id="email" name="email" value="<%= paciente.email %>" required>
                                </div>

                                <!-- Botones de Acci√≥n -->
                                <div class="actions">
                                    <button type="submit">Guardar Cambios</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </section>
        </main>
    </div>

    <script>
        // Funci√≥n para mostrar/ocultar contrase√±a (si es necesario)
        function togglePassword(inputId, button) {
            const input = document.getElementById(inputId);
            if (input.type === "password") {
                input.type = "text";
                button.eyeIcon = "üëÅÔ∏è";
            } else {
                input.type = "password";
                button.eyeIcon = "üëÅÔ∏è";
            }
        }

        // Funci√≥n para manejar la selecci√≥n de imagen
        const imageInput = document.getElementById("imageInput");
        const userImage = document.getElementById("userImage");
        const addImageButton = document.getElementById("addImageButton");
        const removeImageButton = document.getElementById("removeImageButton");

        addImageButton.addEventListener("click", () => {
            imageInput.click();
        });

        imageInput.addEventListener("change", (event) => {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    userImage.src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        });

        removeImageButton.addEventListener("click", () => {
            userImage.src = "/placeholder.svg";
            imageInput.value = "";
        });
    </script>
</body>
</html>
